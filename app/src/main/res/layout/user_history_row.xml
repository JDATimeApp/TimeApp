<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/userProfileImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/iconouser"
            android:contentDescription="@string/user_profile" />

        <TextView
            android:id="@+id/txtViewUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/userProfileImg"
            android:layout_toEndOf="@+id/userProfileImg" />

        <TextView
            android:id="@+id/txtViewEnterHour"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/txtViewUsername"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/userProfileImg"
            android:height="50dp"
            android:layout_toEndOf="@+id/userProfileImg" />

        <TextView
            android:id="@+id/txtViewLeaveHour"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/txtViewEnterHour"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/userProfileImg"
            android:layout_toEndOf="@id/userProfileImg" />

</RelativeLayout>